<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Valentheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- MEnggunakan Warna primer. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- MEnggunakan Warna sekunder. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- warna status bar-->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>


    <style name="my_button" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/btn_bg</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textColor">@color/btn_txt_color</item>
        <item name="paddingStart">32dp</item>
        <item name="paddingEnd">32dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>


</resources>
<!--BAris 18 hingga 26 dimana saya mengkostumisasi tema pada aplikasi ini, untuk backgroun mengimpor dari direwktori drawable'
 font menggunakan jenis sans-serif-condensed-medium
